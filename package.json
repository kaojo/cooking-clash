{
  "name": "Crash_Cook",
  "productName": "Crash Cook",
  "author": "Julian Winter",
  "homepage": "https://github.com/kaojo",
  "private": true,
  "main": "electron.js",
  "version": "0.0.1",
  "description": "Cooking App",
  "scripts": {
    "setup": "npm install && ionic platform add android && ionic platform add browser && npm run reset && npm run build",
    "deploy": "ionic run android",
    "build": "cordova build && ionic build android && ionic build browser",
    "emulate": "ionic emulate android",
    "emulate:browser": "ionic emulate browser",
    "serve": "ionic serve --consolelogs",
    "lab": "ionic serve --consolelogs --lab",
    "reset": "ionic state reset",
    "serve:android": "ionic run android --debug --livereload",
    "release": "release:android && release:desktop",
    "release:android": "npm run prerelease:android && npm run sign:android",
    "release:desktop": "npm run electron:build",
    "prerelease:android": "cordova build --release android",
    "ionic:build": "ionic-app-scripts build",
    "ionic:serve": "ionic-app-scripts serve",
    "sign:android": "jarsigner -verbose -sigalg SHA1withRSA -digestalg SHA1 -keystore my-release-key.keystore HelloWorld-release-unsigned.apk alias_name",
    "electron": "electron src/electron",
    "electron:dist": "electron .",
    "electron:build": "electron-packager . crash-cook --all --out=platforms --overwrite --icon=resources/icon.png",
    "electron:build:64": "electron-packager . crash-cook --all --arch=x64 --out=platforms --overwrite --icon=resources/icon.png",
    "electron:build:32": "electron-packager . crash-cook --all --arch=ia32 --out=platforms --overwrite --icon=resources/icon.png",
    "electron:build:linux:armv7l": "electron-packager . crash-cook --platform=linux --arch=armv7l --out=platforms --overwrite --icon=resources/icon.png",
    "electron:build:linux:32": "electron-packager . crash-cook --platform=linux --arch=ia32 --out=platforms --overwrite --icon=resources/icon.png",
    "electron:build:linux:64": "electron-packager . crash-cook --platform=linux --arch=x64 --out=platforms --overwrite --icon=resources/icon.png",
    "electron:build:mac:32": "electron-packager . crash-cook --platform=darwin --arch=ia32 --out=platforms --overwrite --icon=resources/icon.png",
    "electron:build:mac:64": "electron-packager . crash-cook --platform=darwin --arch=x64 --out=platforms --overwrite --icon=resources/icon.png",
    "electron:build:win:32": "electron-packager . crash-cook --platform=win32 --arch=ia32 --out=platforms --overwrite --icon=resources/icon.png",
    "electron:build:win:64": "electron-packager . crash-cook --platform=win32 --arch=x64 --out=platforms --overwrite --icon=resources/icon.png"
  },
  "dependencies": {
    "@ionic/app-scripts": "0.0.47",
    "@angular/common": "2.1.1",
    "@angular/compiler": "2.1.1",
    "@angular/compiler-cli": "2.1.1",
    "@angular/core": "2.1.1",
    "@angular/forms": "2.1.1",
    "@angular/http": "2.1.1",
    "@angular/platform-browser": "2.1.1",
    "@angular/platform-browser-dynamic": "2.1.1",
    "@angular/platform-server": "2.1.1",
    "@ionic/storage": "1.1.6",
    "ionic": "^2.1.14",
    "ionic-angular": "2.0.0-rc.3",
    "ionic-native": "2.2.3",
    "ionicons": "3.0.0",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "0.6.26"
  },
  "devDependencies": {
    "cordova": "^6.4.0",
    "cordova-browser": "^4.1.0",
    "cordova-check-plugins": "^2.0.0",
    "electron": "^1.4.12",
    "electron-packager": "^8.4.0",
    "typescript": "2.0.6"
  },
  "cordovaPlugins": [
    "cordova-plugin-whitelist",
    "cordova-plugin-console",
    "cordova-plugin-statusbar",
    "cordova-plugin-device",
    "cordova-plugin-splashscreen",
    "ionic-plugin-keyboard"
  ],
  "cordovaPlatforms": [
    "android",
    "browser"
  ]
}
